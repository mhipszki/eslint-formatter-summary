{
  "name": "eslint-formatter-summary",
  "version": "2.0.0",
  "description": "ESLint summary formatter aggregating results by rule",
  "keywords": [
    "eslint",
    "eslint-formatter",
    "summary",
    "formatter",
    "javascript",
    "linting",
    "report"
  ],
  "bugs": {
    "url": "https://github.com/mhipszki/eslint-summary-formatter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhipszki/eslint-summary-formatter.git"
  },
  "license": "MIT",
  "author": "Marton Hipszki <mhipszki@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "esbuild lib/index.ts --bundle --platform=node --packages=external --target=node18 --outdir=dist --sourcemap=linked",
    "lint": "eslint lib/",
    "prepare": "husky",
    "prettier": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest --run --coverage",
    "try": "eslint -f ./index.js",
    "typecheck": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@vitest/coverage-v8": "^2.1.8",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
